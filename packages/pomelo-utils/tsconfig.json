{
    "compilerOptions": {
      "target": "es5",
      "module": "ES6",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "./dist/types"
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "tests"
    ]
}