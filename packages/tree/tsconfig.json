{
    "compilerOptions": {
      "target": "es5",
      "module": "ES6",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "moduleResolution": "Node"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}